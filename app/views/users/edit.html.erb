<h1> Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
  	<%= f.label :name %><br />
  	<%= f.text_field :name %>
  </div>
  <div class="field">
  	<%= f.label :email %><br />
  	<%= f.text_field :email %><br /> <!--take out br -->
  </div>
  <div class="field">
  	<%= f.label :password, "New Password" %><br />
  	<%= f.password_field :password %>
  </div> 
  <div class="field">
  	<%= f.label :password_confirmation , "New Password Confirmation" %><br />
  	<%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
  	<%= f.submit "Update" %>
  </div>
<% end %>

<br />
<div>
  <%= gravatar_for @user%>
  <a href="http://gravatar.com/emails">Change Gravatar</a>
</div>