<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <% if params[:session].nil? %>
      <%= f.text_field :email , :value => "Email" %>
    <% else %>
      <%= f.text_field :email , :value => params[:session][:email] %>   <!-- Added lines 6-10 myself, does it work properly?-->
    <%end%>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>